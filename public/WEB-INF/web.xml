<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="https://jakarta.ee/xml/ns/jakartaee" 
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" 
         id="WebApp_ID" version="5.0">
    <display-name>FireAlertProject</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>

        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
    </welcome-file-list>
    <!-- Add servlet definitions and mappings here if needed -->
<servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>MyPackage.UserRegistrationServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/userRegistrationServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>MyPackage.login</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>


         
</web-app>
