<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>FireAlertProject</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
    </welcome-file-list>
    <!-- Add servlet definitions and mappings here if needed -->
<servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>MyPackage.UserRegistrationServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/userRegistrationServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>MyPackage.login</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>


         
</web-app>
